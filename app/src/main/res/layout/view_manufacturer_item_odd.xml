<?xml version="1.0" encoding="utf-8"?>

<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="manufacturersItemViewModel"
            type="com.grenzfrequence.showmycar.car_types.viewmodel.ManufacturersItemViewModel"
            />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_even"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/radius_medium"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/cardBackgroundOdd"
        >

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/medium"
            android:textSize="@dimen/txt_large"
            android:text="@{manufacturersItemViewModel.manufacturer}"
            tools:text="Manufacturer 01"
            />

    </android.support.v7.widget.CardView>

</layout>