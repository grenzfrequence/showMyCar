<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <variable
            name="manufacturersViewModel"
            type="com.grenzfrequence.showmycar.car_types.viewmodel.ManufacturersViewModel"
            />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/medium"
        android:layout_marginEnd="@dimen/medium"
        android:layout_marginStart="@dimen/medium"
        android:layout_marginTop="@dimen/medium"
        android:fitsSystemWindows="true"
        tools:context="com.grenzfrequence.showmycar.car_types.ui.ManufacturersActivity"
        >

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/srl_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="@{manufacturersViewModel.showList}"
                    tools:visibility="visible"
                    />

                <ImageView
                    android:id="@+id/iv_place_holder"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/xxl"
                    android:layout_marginTop="@dimen/xxxl"
                    android:layout_marginBottom="@dimen/medium"
                    android:tint="@android:color/tertiary_text_light"
                    app:srcCompat="@{manufacturersViewModel.placeHolderIconId}"
                    android:visibility="@{manufacturersViewModel.showPlaceholder}"
                    tools:srcCompat="@drawable/ic_info_outline_black"
                    tools:visibility="gone"
                    />

                <TextView
                    android:id="@+id/tv_error_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/medium"
                    android:layout_marginTop="@dimen/medium"
                    android:text="@{manufacturersViewModel.errorMessageId}"
                    android:visibility="@{manufacturersViewModel.showPlaceholder}"
                    tools:text="Error message"
                    tools:visibility="gone"
                    />

            </LinearLayout>
        </android.support.v4.widget.SwipeRefreshLayout>

    </android.support.design.widget.CoordinatorLayout>


</layout>